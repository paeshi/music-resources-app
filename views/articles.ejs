
    <%- include('partials/header');-%>
    <h1>Articles</h1>

    <form action="/articles" method="post" id="articles">
        <div class="form-group">
            <label class="form-label">Title</label>
            <input type="text" name="title" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Article</label>
            <textarea class="form-control" type="text" name="bodyContent" cols="140" rows="15" placeholder=""></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary mt-3">Publish</button>
    </form>


    <%posts.forEach(function(post) { %>
       <h2> <%=post.title %></h2>
       <p><%= post.content%></p>
   <% });%>

    <%- include('partials/footer');-%>
