<%- include('partials/header');-%>

<div class="row">
    <div class="col-lg-12 create-div">
        <h1 id="create-header">Create An Article</h1>
        <form action="/articles" method="post" id="articles">
        <div class="form-group">
            <label class="form-label">Title</label>
            <input type="text" name="title" placeholder="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Article</label>
            <textarea class="form-control" type="text" name="body" cols="140" rows="15" placeholder=""></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-dark mt-3">Publish</button>
        <button type="submit" name="update" class="btn btn-light mt-3">Update</button>
        </form>
    </div>
</div>


<%- include('partials/footer');-%>